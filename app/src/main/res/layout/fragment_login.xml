<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_fragment_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.login.LoginFragment">

    <LinearLayout
        android:id="@+id/ll_pbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:max="100"
            android:backgroundTint="@color/black"
            android:indeterminateTint="@color/colorTextPrimary"
            android:layout_marginTop="-5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_choice_forms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/layout_margin_20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_registration" />

        <Button
            android:id="@+id/btn_authorization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_authorization" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_registration_forms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/layout_margin_20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ib_registration_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />

        <EditText
            android:id="@+id/et_registration_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/et_registration_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/btn_click_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_registration" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_authorization_forms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/layout_margin_20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ib_authorization_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />

        <EditText
            android:id="@+id/et_authorization_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/et_authorization_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/btn_click_authorization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_authorization" />
    </LinearLayout>

</FrameLayout>